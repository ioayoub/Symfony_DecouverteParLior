<!DOCTYPE HTML>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
			<link href="https://bootswatch.com/5/flatly/bootstrap.css" rel="stylesheet">
		{% endblock %}


	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href=" {{path('home')}} ">SymBlog</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link" href=" {{ path('blog') }} ">Articles
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href=" {{ path('blog_create')}}">Cr√©er un article</a>
						</li>

						{% if not app.user %}

							<li class="nav-item">
								<a class="nav-link" href=" {{ path('security_login') }} ">Connexion</a>
							</li>

						{% else %}

							<li class="nav-item">
								<a class="nav-link" href=" {{ path('security_logout') }} ">Deconnexion</a>
							</li>

						{% endif %}
					</div>
				</ul>
			</nav>
		</div>
		<div class="container"> {% block body %}{% endblock %}
			</div>
			{% block javascripts %}{#{{ encore_entry_script_tags('app') }}#}{% endblock %}
		</body>
	</html>
</body></html>
