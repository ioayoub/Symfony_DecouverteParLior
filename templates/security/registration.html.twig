{% extends'base.html.twig' %}

{% block body %}

	<h1>Inscription</h1>

	{{ form_start(form) }}

	{{ form_row(form.email, {'label':'Adresse Email', 'attr' : { 'placeholder' : 'Votre email ici ...' }}
	) }}
	{{ form_row(form.username, {'label' : 'Pseudo', 'attr' : {'placeholder' : 'Votre pseudo ici...' }}) }}
	{{ form_row(form.password, {'label':'Mot de passe', 'attr': {'placeholder' : 'Votre mot de passe ici...'
	}}) }}
	{{ form_row(form.confirmPassword, {'label':'Confirmation mot de passe', 'attr': {'placeholder':'Veuillez confirmer votre mot de passe...'}}) }}
	<button type="submit" class="btn btn-success">Inscription</button>

	{{ form_end(form) }}

{% endblock %}
